-#  This file is app/views/movies/index.html.haml
%h2 All Movies
= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", value="1", @checked_ratings.include?(rating)
  = submit_tag 'Refresh'
  
%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:class => ("hilite" if @sort=="title")}= link_to "Movie Title", ('/movies/?title=1')
      %th Rating
      %th{:class => ("hilite" if @sort=="release_date")}= link_to "Release Date", ('/movies/?release_date=1')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
